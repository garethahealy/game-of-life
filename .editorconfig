root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,jsx,ts,tsx,css,scss,html,json,yaml}]
indent_style = space
indent_size = 2
max_line_length = 160

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 200

[*.{java,xml,properties}]
indent_style = space
indent_size = 4
